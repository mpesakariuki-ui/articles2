rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Posts - readable by all, writable by authenticated users only
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Comments - readable by all, writable by authenticated users only
    match /posts/{postId}/comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reading progress - only accessible by the user who owns it
    match /readingProgress/{progressId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // User profiles - only accessible by the user who owns it
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
  }
}